<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <RadioGroup
        android:id="@+id/RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="5">

        <RadioButton
            android:id="@+id/BtnA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/tab_home_normal"
            android:gravity="center_horizontal"
            android:text="首页" />

        <RadioButton
            android:id="@+id/BtnB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/tab_panda_live_normal"
            android:gravity="center_horizontal"
            android:text="熊猫直播" />

        <RadioButton
            android:id="@+id/BtnC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/tab_panda_culture_normals"
            android:gravity="center_horizontal"
            android:text="滚滚视频" />

        <RadioButton
            android:id="@+id/BtnD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/tab_panda_eye_normal"
            android:gravity="center_horizontal"
            android:text="熊猫播报" />

        <RadioButton
            android:id="@+id/BtnE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/tab_live_china_normal"
            android:gravity="center_horizontal"
            android:text="直播中国" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/FrameLayoutA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/RadioGroup"></FrameLayout>
</RelativeLayout>
